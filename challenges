#challenge7
import math
x1=float(input("Entrez la valeur de x1: "))
y1=float(input("Entrez la valeur de y1: "))
x2=float(input("Entrez la valeur de x2: "))
y2=float(input("Entrez la valeur de y2: "))
distance = ((x2 - x1) ** 2 + (y2 - y1) ** 2) ** 0.5 #methode1
print("La distance entre les points (" + str(x1) + ", " + str(y1) + ") et (" + str(x2) + ", " + str(y2) + ") est: " + str(distance))
d=math.sqrt((x2 - x1) ** 2 + (y2 - y1) ** 2) #methode2
print("La distance entre les points " + str(d))
